---
import Header from '../components/Header.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title='About Me'>
  <Header />
  <section class='max-w-7xl mx-auto px-10'>
    <h2 class='text-4xl text-indigo-700 font-bold'>Contact Me</h2>
    <p class='text-gray-500 font-semibold'>
      Lorem ipsum dolor sit amet consectetur adipisicing elit. Laboriosam iure
      cupiditate iusto voluptate quae
    </p>

    <form action="">
        <div>
            <label class="font-bold text-xl block" for="name">Name</label>
            <input type="text" class="px-5  rounded outline-none  py-2 focus:outline-none ring focus:ring-yellow-500 w-full">
        </div>
        <div>
            <label class="font-bold text-xl block" for="name">Email</label>
            <input type="text" class="px-5  rounded outline-none  py-2 focus:outline-none ring focus:ring-yellow-500 w-full">
        </div>
        <div>
            <label class="font-bold text-xl block" for="name">Message</label>
            <textarea class="px-5  rounded outline-none  py-2 focus:outline-none ring focus:ring-yellow-500 w-full"/>
        </div>
        <div>
           
            <input type="submit" class="px-5 bg-indigo-600 rounded outline-none  py-2 w-full">
        </div>
    </form>
  </section>
</Layout>
